{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/server/social-feed-api.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "ngserve",
            "type": "shell",
            "args": [
                "serve"
            ],
            "command": "ng",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}/client"
            },
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": "\\b\\B",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": false,
                        "beginsPattern": "^.*NG Live Development Server*",
                        "endsPattern": "^.*webpack: Compiled successfully.*"
                    }
                }
            ]
        }
    ]
}